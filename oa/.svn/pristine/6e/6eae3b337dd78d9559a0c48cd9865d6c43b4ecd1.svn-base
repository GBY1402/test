#cty {
	/*border: 1px #000000 solid;*/
	width: 610px;
}
.select_city {
	width: 100px;
	height: 25px;
	border: 1px #7D7D7D solid;
	vertical-align: middle;
	line-height: 30px;
	padding-left: 10px;
	margin-left: 10px;
	font-size: 12px;
	float: left;
	border-radius: 5px;
}

.select_city :hover {
	cursor: pointer;
}

.select-icon {
	float: right;
}

.select_city-icon {
	float: left;
}

.select_option {
	display: none;
	width: 600px;
	margin-left: 10px;
	line-height: 5px;
	border: 1px #000000 solid;
	border-radius: 5px;
}

.select_option ul{
	list-style: none;
	zoom:1;overflow:Hidden;line-height:10px;padding:8px;
}

.select_option li{
	float:left;
	width:100px;
	cursor:pointer;
	text-indent:10px;
	height:20px;
	overflow:Hidden;
	margin-left: 10px;
	margin-top: 10px;
	font-size: 12px;
}

.select_option li.over{
	background-color:#f90;color:#fff
}
